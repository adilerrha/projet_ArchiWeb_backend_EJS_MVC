<!DOCTYPE html>
<html lang="fr">

<head>
    <%- include('./partials/head'); %>
</head>

<body>
    <header>
        <%- include('./partials/header-account'); %>
    </header>

    <main class="container" style="margin-top:2%">
        <form action="/register" method="POST">
            <h3>Inscription</h3>
            <div class="form-group">
                <label for="name">Nom complet</label>
                <input type="text" autocomplete="on" required id="name" name="name" class="form-control form-control-lg" />
            </div>
            <div class="form-group">
                <label for="email">Adresse Email</label>
                <input type="email" autocomplete="on" required id="email" name="email" class="form-control form-control-lg" />
            </div>
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" autocomplete="on" required id="password" name="password" class="form-control form-control-lg" />
            </div>
            <button type="submit" class="btn btn-dark btn-lg btn-block">S'inscrire</button>
        </form>
    </main>

    <footer>
        <%- include('./partials/footer'); %>
    </footer>

</body>

</html>