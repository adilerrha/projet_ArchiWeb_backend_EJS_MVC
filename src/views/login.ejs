<!DOCTYPE html>
<html lang="fr">

<head>
    <%- include('./partials/head'); %>
</head>

<body>
    <header>
        <%- include('./partials/header-account'); %>
    </header>

    <main class="container" style="margin-top:2%">
        <form action="/login" method="POST">
            <h3>Connexion</h3>

            <div class="form-group">
                <label for="email">Adresse Email</label>
                <input type="email" name="email" id="email" required autocomplete="on" class="form-control form-control-lg" />
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" name="password" id="password" required autocomplete="on" class="form-control form-control-lg" />
            </div>

            <button type="submit" class="btn btn-dark btn-lg btn-block">
              Se connecter
            </button>
        </form>
    </main>

    <footer>
        <%- include('./partials/footer'); %>
    </footer>

</body>

</html>